      <Button fx:id="addButton" layoutX="35.0" layoutY="36.0" mnemonicParsing="false" onAction="#addButtonClick" prefHeight="50.0" prefWidth="177.0" styleClass="rounded-button" stylesheets="@../../../images/edit_style.css" text="Додати" AnchorPane.topAnchor="145.0">
