      </Button>
      <Button fx:id="applyButton" layoutX="343.0" layoutY="244.0" mnemonicParsing="false" onAction="#applyButtonClick" stylesheets="@../../../images/style.css" text="Застосувати">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
         <styleClass>
            <String fx:value="rounded-button" />
            <String fx:value="applyButton" />
         </styleClass>
      </Button>
      <Button fx:id="lookButton" layoutX="309.0" layoutY="307.0" mnemonicParsing="false" onAction="#lookButtonClick" styleClass="rounded-button" stylesheets="@../../../images/style.css" text="Переглянути вміст">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Button>
   </children>
